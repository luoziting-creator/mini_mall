/* pages/cart/w-bottom-bar/w-bottom-bar.wxss */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background-color: #eee;
  height: 88rpx;
  text-align: center;
  padding-left: 30rpx;
  box-shadow: 0 -2px 2px rgba(0, 0, 0, .1);
  font-size: 28rpx;

  
}
.check-box{
  display: flex;
  width: 150rpx;
  align-items: center;


}
.counter {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}
.payment{
  background-color: #ff4500;
  width: 200rpx;
  height: 88rpx;
  color: #fff;
  line-height: 88rpx;

}
.icon {
  margin-right: 10rpx;
}
.counter-text {
  color: red;
}